doctype html
html
	head
		block topheader
		include ./header.pug
		include ./datatables.pug
		
		script.
			$(document).ready(() => {
				$("#origins").DataTable({
					pageLength: 25,
				});
			});
		meta(charset="UTF-8")
		style(type="text/css").
			#origins_wrapper {
				padding: 10px 40px 0 40px !important;
			}

		include ./navigation.pug
	body
		block navigation
		table(id="origins", class="table table-striped table-bordered")
			thead
				th Emote
				th Text
				th Submitter
			each row in data
				tr
					td #{row.Emote}
					td #{row.Text}
					td #{row.User_Name}