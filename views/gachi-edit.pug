doctype html
html
	head
		block topheader
		include ./header.pug
		include ./navigation.pug
			
		meta(charset="UTF-8")
		style(type="text/css").
			td.key {
				vertical-align: middle !important;
			}
	body
		block navigation

		form(id="edit-gachi" action="/gachi/edit/"+data.ID method="post")
			table(id="gachi", class="table table-striped table-bordered")
				tbody
					- if (!authUser) {
						center
							h5 Editing existing data is only allowed while logged in.
							br
							div Please log in first.
					- }
					- else {
						for value, key in data
							tr
								td.key
									b #{key}
								td.value
									- const lowKey = key.toLowerCase();
									input(#{req} type=types[key] class="form-control" value=value name=key id="input-"+lowKey)
					- }
